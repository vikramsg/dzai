{
    "name": "devcontainer",
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "runArgs": ["--env-file", ".env"],
    "containerEnv": {
        "SHELL": "/bin/zsh"
    },
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "username": "vscode",
            "uid": "1000",
            "gid": "1000",
            "installSudo": "true"
        },
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest",
            "serverPort": 2222,
            "passwordAuth": "false"
        },
        "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
        "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
            "plugins": "python git zsh-autosuggestions zsh-syntax-highlighting dotenv",
            "omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions.git https://github.com/zsh-users/zsh-syntax-highlighting.git"
        }
    },
    "mounts": [
        "type=bind,source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh_host,consistency=cached,readonly=true",
        "type=bind,source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig"
    ],
    "appPort": ["2222:2222"],
    // -l: start a login shell, -c: start executing and then exit
    "postCreateCommand": "bash -lc .devcontainer/postCreate.sh"
}
